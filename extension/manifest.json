{
  "manifest_version": 3,
  "name": "Carbon for F1TV",
  "description": "Enhance your F1TV experience.",
  "version": "0.1000.1000",
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png",
    "512": "icon/512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://f1tv.formula1.com/*"
      ],
      "js": [
        "lib/jquery-3.7.1.min.js",
        "carbon-for-f1tv.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/16.png",
      "48": "icon/48.png",
      "128": "icon/128.png",
      "512": "icon/512.png"
    }
  }
}
